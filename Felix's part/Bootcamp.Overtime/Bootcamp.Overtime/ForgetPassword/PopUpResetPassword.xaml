        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Overtime.ForgetPassword"
        mc:Ignorable="d"
        Title="PopUpResetPassword" Height="183.506" Width="300">
