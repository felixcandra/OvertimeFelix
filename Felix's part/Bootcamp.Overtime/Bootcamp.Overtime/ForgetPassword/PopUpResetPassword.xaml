        <Label x:Name="label" Content="New Password :" HorizontalAlignment="Left" Margin="30,29,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Confirm Password :" HorizontalAlignment="Left" Margin="12,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="128,102,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
