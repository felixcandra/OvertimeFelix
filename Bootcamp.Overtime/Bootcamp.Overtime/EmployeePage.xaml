<Window x:Class="WPF.Overtime.EmployeePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Overtime"
        mc:Ignorable="d"
        Title="EmployeePage" Height="300" Width="428.758"
        Loaded="Window_Loaded">
        
    <Grid>
        <DataGrid x:Name="OvertimeEmployeeGrid" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="189" Width="401">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Path=check_in}"></DataGridTextColumn>
                <DataGridTextColumn Header="Hours" Binding="{Binding Path=difference}"></DataGridTextColumn>
                <DataGridTextColumn Header="Overtime Salary" Binding="{Binding Path=overtime_salary}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
